{
  "openapi": "3.0.0",
  "info": {
    "title": "Rick-and-Morty-API",
    "description": "API para CRUD de personagens da serie animda Rick and Morty",
    "termsOfService": "",
    "contact": {
      "email": "gugumartin77@gmail.com",
